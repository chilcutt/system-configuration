alias vi='vim'
alias ls='ls -G'
alias l='ls -l'
alias la='ls -A'
alias ll='ls -alF'
alias llh='ls -alFh'
alias lls='ls -alFSr'
alias llsh='ls -alFhSr'
alias cd='cdl'
alias df='df -h'
alias du='du -hc'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias utc='date -u +"%Y-%m-%dT%H%MZ"'
alias z='zeus'
alias zr='zeus rspec'
alias zpr='zeus parallel_rspec'
alias psql_start='sudo -u postgres /opt/local/lib/postgresql91/bin/pg_ctl -D /opt/local/var/db/postgresql91/defaultdb start'
alias npm-exec='PATH=$(npm bin):$PATH'
alias gti='git'
alias gits='git'
alias rails='mux rhs-rails'
alias care='mux rhs-care'
alias ios='mux rhs-ios'
alias android='mux rhs-android'

[ -n `which gem` ] && alias remove_all_gems='gem list | cut -d" " -f1 | xargs gem uninstall -aIx'
[ -n `which pkill` ] && alias logout_user='pkill -KILL -u'
